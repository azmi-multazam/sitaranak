<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar android:id="@+id/activity_detail_trx_pulsa_Toolbar"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            android:transitionName="transisi_history"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            tools:ignore="UnusedAttribute" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentPadding="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow android:padding="5dp">

                        <TextView
                            android:textColor="@color/black_1"
                            android:text="tanggal" />

                        <TextView
                            android:id="@+id/activity_detail_trx_pulsa_TextViewTanggal"
                            android:padding="5dp"
                            android:textColor="@color/black_1"
                            android:text=": text" />
                    </TableRow>

                    <TableRow android:padding="5dp">

                        <TextView
                            android:textColor="@color/black_1"
                            android:text="produk" />

                        <TextView
                            android:id="@+id/activity_detail_trx_pulsa_TextViewProduk"
                            android:layout_weight="1"
                            android:textColor="@color/black_1"
                            android:padding="5dp"
                            android:text=": text" />
                    </TableRow>

                    <TableRow android:padding="5dp">

                        <TextView
                            android:textColor="@color/black_1"
                            android:text="Berita" />

                        <TextView
                            android:id="@+id/activity_detail_trx_pulsa_TextViewBerita"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_1"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text=": text" />
                    </TableRow>

                    <TableRow android:padding="5dp">

                        <TextView
                            android:textColor="@color/black_1"
                            android:text="Harga" />

                        <TextView
                            android:id="@+id/activity_detail_trx_pulsa_TextViewHarga"
                            android:padding="5dp"
                            android:textColor="@color/black_1"
                            android:text=": text" />
                    </TableRow>

                    <TableRow android:padding="5dp">

                        <TextView
                            android:textColor="@color/black_1"
                            android:text="Status" />

                        <TextView
                            android:id="@+id/activity_detail_trx_pulsa_TextViewStatus"
                            android:padding="5dp"
                            android:textColor="@color/black_1"
                            android:text=": text" />
                    </TableRow>
                </TableLayout>
            </androidx.cardview.widget.CardView>
        </ScrollView>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/activity_detail_trx_pulsa_ProgressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible" />

</FrameLayout>

