<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/blue"
    android:orientation="vertical"
    android:paddingBottom="8.0dip"
    android:paddingTop="0dip">

    <include
        layout="@layout/appbar_and_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp" />

    <LinearLayout
        android:id="@+id/actiivity_main_LinearLayoutUtama"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.0dip"
            android:layout_weight="2.0"
            android:baselineAligned="false"
            android:weightSum="2.0">

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_marginBottom="2.0dip"
                android:layout_marginLeft="4.0dip"
                android:layout_marginRight="2.0dip"
                android:layout_marginTop="0.0dip"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:weightSum="2.0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.0dip"
                    android:layout_weight="1.0"
                    android:orientation="horizontal"
                    android:weightSum="2.0">

                    <RelativeLayout
                        android:id="@+id/btn_isipulsa"
                        style="@style/paddingbottomdashboard"
                        android:layout_width="0.0dip"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/grad4"
                        android:orientation="vertical">

                        <TextView
                            style="@style/menudashboard"
                            android:text="Isi Pulsa" />

                        <ImageView
                            style="@style/gbrdashboard"
                            android:src="@mipmap/ic_action_phone" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/btn_internet"
                        style="@style/paddingbottomdashboard"
                        android:layout_width="0.0dip"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2.0dip"
                        android:layout_marginLeft="2.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/grad2"
                        android:orientation="vertical">

                        <TextView
                            style="@style/menudashboard"
                            android:text="Internet" />

                        <ImageView
                            style="@style/gbrdashboard"
                            android:src="@mipmap/ic_internet" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.0dip"
                    android:layout_weight="1.0"
                    android:orientation="horizontal"
                    android:weightSum="2.0">

                    <RelativeLayout
                        android:id="@+id/btn_token_pln"
                        style="@style/paddingbottomdashboard"
                        android:layout_width="0.0dip"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2.0dip"
                        android:layout_marginTop="2.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/grad19"
                        android:orientation="vertical">

                        <TextView
                            style="@style/menudashboard"
                            android:text="Token PLN" />

                        <ImageView
                            style="@style/gbrdashboard"
                            android:src="@mipmap/ic_flash" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/btn_game"
                        style="@style/paddingbottomdashboard"
                        android:layout_width="0.0dip"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginTop="2.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/grad18"
                        android:orientation="vertical">

                        <TextView
                            style="@style/menudashboard"
                            android:text="Game" />

                        <ImageView
                            style="@style/gbrdashboard"
                            android:src="@mipmap/ic_videogame" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/btn_news"
                style="@style/paddingbottomdashboard"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_marginBottom="2.0dip"
                android:layout_marginLeft="2.0dip"
                android:layout_marginRight="4.0dip"
                android:layout_marginTop="0.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/grad3"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/activity_ppob_ImageViewBarcode"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="#fff" />

                <TextView
                    android:id="@+id/activity_ppob_TextViewNAmaMember"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_ppob_ImageViewBarcode"
                    android:layout_marginBottom="20.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_marginTop="5.0dip"
                    android:gravity="center_horizontal"
                    android:text="Nama member"
                    android:textColor="#ffffffff"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/activity_ppob_TextViewSaldoMember"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_ppob_TextViewNAmaMember"
                    android:gravity="center_horizontal"
                    android:text="Saldo -"
                    android:textColor="#ffffffff"
                    android:textStyle="bold" />

                <!--<TextView-->
                <!--android:text="User Info"-->
                <!--style="@style/menudashboard"/>-->

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:baselineAligned="false">

            <RelativeLayout
                android:id="@+id/activity_ppob_ButtonPembayaranTagihan"
                style="@style/paddingbottomdashboard"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_marginBottom="2.0dip"
                android:layout_marginLeft="4.0dip"
                android:layout_marginRight="2.0dip"
                android:layout_marginTop="2.0dip"
                android:layout_weight="0.25"
                android:background="@drawable/grad11"
                android:orientation="vertical">

                <TextView
                    style="@style/menudashboard"
                    android:gravity="bottom|center_horizontal"
                    android:text="Bayar Tagihan" />

                <ImageView
                    style="@style/gbrdashboard"
                    app:srcCompat="@drawable/ic_money" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_ppob_ButtonInfoDanNews"
                style="@style/paddingbottomdashboard"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_margin="2.0dip"
                android:layout_weight="0.25"
                android:background="@drawable/grad6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/activity_main_TextViewBerita"
                    style="@style/menudashboard"
                    android:gravity="bottom|center_horizontal"
                    android:text="Info dan News" />

                <ImageView
                    style="@style/gbrdashboard"
                    android:src="@mipmap/ic_action_deposit" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_ppob_ButtonTransferSaldo"
                style="@style/paddingbottomdashboard"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_margin="2.0dip"
                android:layout_weight="0.25"
                android:background="@drawable/grad10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/activity_main_TextViewTransferSaldo"
                    style="@style/menudashboard"
                    android:gravity="bottom|center_horizontal"
                    android:text="Transfer Saldo" />

                <ImageView
                    style="@style/gbrdashboard"
                    android:src="@mipmap/ic_action_list" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_ppob_ButtonTambahSaldo"
                style="@style/paddingbottomdashboard"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_marginBottom="2.0dip"
                android:layout_marginLeft="2.0dip"
                android:layout_marginRight="4.0dip"
                android:layout_marginTop="2.0dip"
                android:layout_weight="0.25"
                android:background="@drawable/grad7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/activity_main_TextViewTambahSaldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:paddingLeft="5dp"
                    android:paddingStart="5dp"
                    android:text="Tambah Saldo"
                    android:textColor="@color/selector_white_accent"
                    android:textSize="12sp" />

                <ImageView
                    style="@style/gbrdashboard"
                    android:src="@mipmap/ic_action_wallet" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.0dip"
            android:layout_weight="2.0"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="4.0dip"
                android:layout_marginLeft="4.0dip"
                android:layout_marginRight="2.0dip"
                android:layout_marginTop="2.0dip"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/activity_ppob_ButtonSettings"
                    style="@style/paddingbottomdashboard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2.0dip"
                    android:layout_weight="0.5"
                    android:background="@drawable/grad8"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/activity_mainTextViewSettings"
                        style="@style/menudashboard"
                        android:text="Settings" />

                    <ImageView
                        style="@style/gbrdashboard"
                        app:srcCompat="@drawable/ic_settings" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/activity_ppob_ButtonKomisiTrxDownline"
                    style="@style/paddingbottomdashboard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2.0dip"
                    android:layout_weight="0.5"
                    android:background="@drawable/grad9"
                    android:orientation="vertical">


                    <ImageView
                        style="@style/gbrdashboard"
                        app:srcCompat="@drawable/ic_business" />

                    <TextView
                        android:id="@+id/activity_main_TextViewKomisi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:paddingLeft="10dp"
                        android:paddingStart="10dp"
                        android:text="Koperasi"
                        android:textColor="@color/selector_white_accent"
                        android:textSize="13sp"
                        android:transitionName="transisi_komisi"
                        tools:ignore="UnusedAttribute" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="4.0dip"
                android:layout_marginLeft="2.0dip"
                android:layout_marginRight="4.0dip"
                android:layout_marginTop="2.0dip"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/btn_history"
                    style="@style/paddingbottomdashboard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2.0dip"
                    android:layout_weight="0.5"
                    android:background="@drawable/grad5"
                    android:orientation="vertical">

                    <TextView android:id="@+id/activity_main_TextViewHistory"
                        style="@style/menudashboard"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:text="History"
                        android:transitionName="transisi_history"
                        tools:ignore="UnusedAttribute" />

                    <ImageView
                        style="@style/gbrdashboard"
                        android:src="@mipmap/ic_action_mutasi" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/activity_ppob_ButtonIklnanMerchant"
                    style="@style/paddingbottomdashboard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2.0dip"
                    android:layout_weight="0.5"
                    android:background="@drawable/grad1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/activity_main_TextViewIklanMerchant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:paddingLeft="10dp"
                        android:paddingStart="10dp"
                        android:text="Iklan"
                        android:textColor="@color/selector_white_accent"
                        android:textSize="13sp" />

                    <ImageView
                        style="@style/gbrdashboard"
                        app:srcCompat="@drawable/ic_store" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
