<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar android:id="@+id/activity_detail_tagihan_Toolbar"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            android:transitionName="transisi_history"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            tools:ignore="UnusedAttribute" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="1dp"
                app:cardUseCompatPadding="true">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow android:padding="5dp">

                        <TextView android:text="tanggal" />

                        <TextView
                            android:id="@+id/activity_detail_tagihan_TextViewTanggal"
                            android:padding="5dp"
                            android:text=": text" />
                    </TableRow>

                    <TableRow android:padding="5dp">

                        <TextView android:text="produk" />

                        <TextView
                            android:id="@+id/activity_detail_tagihan_TextViewProduk"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text=": text" />
                    </TableRow>

                    <TableRow android:padding="5dp">

                        <TextView android:text="ID Pelanggan" />

                        <TextView
                            android:id="@+id/activity_detail_tagihan_TextViewIdPelanggan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text=": text" />
                    </TableRow>

                    <TableRow android:padding="5dp">

                        <TextView android:text="Nama Pelanggan" />

                        <TextView
                            android:id="@+id/activity_detail_tagihan_TextViewNamaPelanggan"
                            android:padding="5dp"
                            android:text=": text" />
                    </TableRow>

                    <TableRow android:padding="5dp">

                        <TextView android:text="Periode" />

                        <TextView
                            android:id="@+id/activity_detail_tagihan_TextViewPeriode"
                            android:padding="5dp"
                            android:text=": text" />
                    </TableRow>

                    <TableRow android:padding="5dp">

                        <TextView android:text="Status" />

                        <TextView
                            android:id="@+id/activity_detail_tagihan_TextViewStatus"
                            android:padding="5dp"
                            android:text=": text" />
                    </TableRow>
                </TableLayout>
            </androidx.cardview.widget.CardView>
        </ScrollView>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/activity_detail_tagihan_ProgressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible" />

</FrameLayout>

