<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:contentPadding="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="130dp"
            android:layout_height="160dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="1dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:contentDescription="Gambar Toko"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/ic_launcher" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textViewNamaPemilik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/cardView"
            android:layout_toRightOf="@id/cardView"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:text="Joko"
            android:textColor="@color/black_1"
            android:fontFamily="@font/nunito_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewToko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewNamaPemilik"
            android:layout_toEndOf="@id/cardView"
            android:layout_toRightOf="@id/cardView"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:text="Text Nama Toko"
            android:textColor="@color/textPrimary"
            android:fontFamily="@font/nunito_bold"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewKeterangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewToko"
            android:layout_toEndOf="@id/cardView"
            android:layout_toRightOf="@id/cardView"
            android:textColor="@color/black_1"
            android:padding="8dp" />

        <TextView
            android:id="@+id/textViewHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewKeterangan"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/cardView"
            android:layout_toRightOf="@id/cardView"
            android:text="Rp 2000"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/buttonKontak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewHarga"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/cardView"
            android:layout_toRightOf="@id/cardView"
            android:background="@drawable/selector_btn_primary"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@android:color/white"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Kontak" />

        <TextView
            android:id="@+id/buttonBeli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewHarga"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/buttonKontak"
            android:layout_toRightOf="@id/buttonKontak"
            android:text="Beli"
            android:background="@drawable/selector_btn_primary"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@android:color/white"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>

