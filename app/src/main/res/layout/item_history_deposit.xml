<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPadding="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/item_history_deposit_TextViewTanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_1"
            android:fontFamily="@font/nunito_black"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            android:text="05-07-2017 12:10:33" />

        <TextView
            android:id="@+id/item_history_deposit_TextViewTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_history_deposit_TextViewTanggal"
            android:layout_centerInParent="true"
            android:text="Rp. 258.099"
            android:textColor="@color/textPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_history_deposit_TextViewLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/item_history_deposit_TextViewTotal"
            android:text="05-07-2017 12:10:33"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/item_history_deposit_TextViewBank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/black_1"
            android:text="BCA"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/item_history_deposit_TextViewStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Sukses"
            android:textColor="@color/black_1"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
