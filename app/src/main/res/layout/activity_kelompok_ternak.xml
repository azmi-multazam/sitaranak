<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <include layout="@layout/appbar_and_toolbar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_kelompok_ternak_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="4dp"
        tools:listitem="@layout/item_koordinator"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <com.zam.sidik_padang.util.customclasses.FAB
        android:id="@+id/activity_kelompok_ternak_FAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:backgroundTint="@color/selector_primary_accent"
        app:layout_behavior="com.zam.sidik_padang.home.kelompokternak.FABBehavor"
        app:pressedTranslationZ="3dp"
        app:srcCompat="@drawable/ic_add"
        app:useCompatPadding="true" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
