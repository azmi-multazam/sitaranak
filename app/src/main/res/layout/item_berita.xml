<?xml version="1.0" encoding="utf-8"?>
<com.zam.sidik_padang.util.customclasses.BottomShadowFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout android:id="@+id/item_berita_LinearLayoutHeader"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/item_berita_TextViewHits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/ic_mata"
                android:drawableStart="@drawable/ic_mata"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:text="title"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/item_berita_TextViewTanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@id/item_berita_TextViewHits"
                android:text="tanggal"
                android:textColor="@color/textPrimary"
                android:fontFamily="@font/nunito_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_berita_TextViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/black_1"
                android:layout_below="@id/item_berita_TextViewTanggal"
                android:layout_toLeftOf="@id/item_berita_TextViewHits"
                android:text="title" />

        </RelativeLayout>

        <TextView
            android:id="@+id/item_berita_TextViewIsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:textColor="@color/black_1"
            android:fontFamily="@font/nunito_bold"
            android:paddingTop="5dp" />
    </LinearLayout>
</com.zam.sidik_padang.util.customclasses.BottomShadowFrameLayout>
