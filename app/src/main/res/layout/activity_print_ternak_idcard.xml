<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <include layout="@layout/appbar_and_toolbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="?attr/actionBarSize"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_gravity="center_vertical"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true">

            <com.zam.sidik_padang.util.customclasses.PrintPreviewLayout
                android:id="@+id/printPreviewLayout"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_gravity="center"
                android:background="@android:color/white"
                app:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:paddingBottom="14dp"
                    android:paddingTop="15dp"
                    android:text="SIDIK TERNAK ID CARD"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageBarcode"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignStart="@id/layoutketerangan"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:paddingBottom="5dp" />
                <!--
                <ImageView
                    android:id="@+id/sidik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@id/layoutketerangan"
                    android:layout_toStartOf="@id/layoutketerangan"
                    android:adjustViewBounds="true"
                    android:maxHeight="50dp"
                    android:padding="7dp"
                    android:src="@drawable/sidik_bulat_hijau" />
                    -->

                <ImageView
                    android:id="@+id/imageViewFoto"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_below="@id/textViewTitle"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="100dp"
                    android:paddingEnd="5dp"
                    android:paddingStart="10dp"
                    android:scaleType="fitXY" />


                <LinearLayout
                    android:id="@+id/layoutketerangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/imageBarcode"
                    android:layout_below="@id/textViewTitle"
                    android:layout_toEndOf="@id/imageViewFoto"
                    android:orientation="vertical"
                    android:paddingTop="5dp">

                    <com.zam.sidik_padang.util.customclasses.RobotoCondensedTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID Ternak"
                        android:textSize="10sp" />

                    <com.zam.sidik_padang.util.customclasses.RobotoCondensedTextView
                        android:id="@+id/textViewIdTernak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.zam.sidik_padang.util.customclasses.RobotoCondensedTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID EarTag"
                        android:textSize="10sp" />

                    <com.zam.sidik_padang.util.customclasses.RobotoCondensedTextView
                        android:id="@+id/textViewNomorIrtek"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.zam.sidik_padang.util.customclasses.RobotoCondensedTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pemilik"
                        android:textSize="10sp" />

                    <com.zam.sidik_padang.util.customclasses.RobotoCondensedTextView
                        android:id="@+id/textViewNamaPemilik"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </com.zam.sidik_padang.util.customclasses.PrintPreviewLayout>
        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="5dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/button"
        style="@style/AppTheme.BottomButton"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:text="Print" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>