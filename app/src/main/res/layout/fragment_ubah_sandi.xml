<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp">

            <FrameLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="180dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/wave_top" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/colorAccent"
                    android:text="Ubah Kata Sandi" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="24dp"
                    android:padding="20dp"
                    android:background="@drawable/bg_text_round_accent">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="1">

                        <TableRow android:gravity="center_vertical">

                            <TextView
                                android:textColor="@color/black_1"
                                android:text="Kata Sandi Lama" />

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/fragment_ubah_sandi_TextViewSandiLama"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp"
                                android:inputType="textPassword"
                                android:textColor="@color/black_1" />
                        </TableRow>

                        <TableRow android:gravity="center_vertical">

                            <TextView
                                android:textColor="@color/black_1"
                                android:text="Kata Sandi Baru" />

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/fragment_ubah_sandi_TextViewSandBaru1"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp"
                                android:inputType="textPassword"
                                android:textColor="@color/black_1" />
                        </TableRow>

                        <TableRow android:gravity="center_vertical">

                            <TextView
                                android:textColor="@color/black_1"
                                android:text="Ulangi Sandi Baru" />

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/fragment_ubah_sandi_TextViewSandBaru2"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp"
                                android:inputType="textPassword"
                                android:textColor="@color/black_1" />
                        </TableRow>
                    </TableLayout>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/fragment_ubah_sandi_Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_btn_accent"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/nunito_black"
                    android:textSize="16sp"
                    android:text="Ubah Sandi" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>

