<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/item_header_berita_ImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxHeight="200dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/mask_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_header_berita_TextViewJudul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/black_1"
                android:shadowRadius="2"
                android:text="Hot News"
                android:textColor="@color/cardview_light_background"
                android:fontFamily="@font/nunito_black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_header_berita_TextViewTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/black_1"
                android:shadowRadius="2"
                android:text="Minggu 32 Agustus 23:21"
                android:textColor="@color/cardview_light_background"
                android:fontFamily="@font/nunito_bold"
                android:textSize="13sp" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/item_header_berita_Progreebar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="invisible" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>

