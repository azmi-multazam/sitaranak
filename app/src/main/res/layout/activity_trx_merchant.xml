<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/appbar_and_toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="10dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="50dp"
            android:visibility="invisible">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="3dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:stretchColumns="1">

                    <TableRow android:paddingTop="8dp">

                        <TextView android:text="Pengiklan" />

                        <TextView
                            android:id="@+id/textViewPengiklan"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:paddingStart="10dp"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow android:paddingTop="8dp">

                        <TextView android:text="Kode Transaksi" />

                        <TextView
                            android:id="@+id/textViewKode"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:paddingStart="10dp"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow android:paddingTop="8dp">

                        <TextView android:text="Judul iklan" />

                        <TextView
                            android:id="@+id/textViewToko"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:paddingStart="10dp"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow android:paddingTop="8dp">

                        <TextView android:text="Harga" />

                        <TextView
                            android:id="@+id/textViewHarga"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:paddingStart="10dp"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow android:paddingTop="8dp">

                        <TextView android:text="Potongan" />

                        <TextView
                            android:id="@+id/textViewPotongan"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:paddingStart="10dp"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow android:paddingTop="8dp">

                        <TextView android:text="Total" />

                        <TextView
                            android:id="@+id/textViewTotal"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:paddingStart="10dp"
                            android:textStyle="bold" />
                    </TableRow>
                </TableLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="3dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Masukkan token untuk melanjutkan"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"

                        android:background="@drawable/selector_stroke_white_bg"
                        android:ems="4"
                        android:hint="TOKEN"
                        android:inputType="numberPassword"
                        android:padding="8dp" />


                    <TextView
                        android:id="@+id/button"
                        style="@style/AppTheme.ButtonTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:paddingBottom="8dp"
                        android:paddingEnd="20dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingStart="20dp"
                        android:paddingTop="8dp"
                        android:text="Lanjutkan" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
