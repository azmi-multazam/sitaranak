<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/appbar_and_toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingTop="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/data_ternak"
                        android:fontFamily="@font/nunito_black"
                        android:layout_margin="16dp"
                        android:textSize="16sp"
                        android:textColor="@color/black_1" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGreySoft" />

                    <FrameLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/id_eartek"
                                app:hintTextAppearance="@style/TextHint"
                                android:theme="@style/TextInputLayoutAppearance"
                                app:startIconDrawable="@drawable/ic_sapi_24"
                                app:startIconTint="@color/textPrimary">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/activity_tambah_data_ternak_ib_EditTextEartag"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/bg_edittext_tint"
                                    android:inputType="text|textCapCharacters" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="13dp"
                            android:layout_marginRight="13dp"
                            android:text="*"
                            android:textColor="#f00" />
                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGreySoft" />

                    <FrameLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintTextAppearance="@style/TextHint"
                                android:theme="@style/TextInputLayoutAppearance"
                                app:startIconDrawable="@drawable/ic_sapi_24"
                                app:startIconTint="@color/textPrimary">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/activity_tambah_data_ternak_ib_EditTextIdTernak"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/bg_edittext_tint"
                                    android:hint="@string/id_ternak"
                                    android:inputType="text|textCapCharacters" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imageViewScanBarcode"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="20dp"
                            android:layout_marginRight="20dp"
                            android:clickable="true"
                            android:scaleType="centerInside"
                            android:src="@drawable/selector_ic_camera" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="13dp"
                            android:layout_marginRight="13dp"
                            android:text="*"
                            android:textColor="#f00" />

                        <ProgressBar
                            android:id="@+id/progressBarIdTernak"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:visibility="invisible" />

                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGreySoft" />

                    <FrameLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:scaleType="center"
                                android:layout_margin="10dp"
                                app:tint="@color/textPrimary"
                                app:srcCompat="@drawable/ic_menu_grey" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/TextHint"
                                    android:text="Provinsi" />

                                <androidx.appcompat.widget.AppCompatSpinner
                                    android:id="@+id/activity_tambah_data_ternak_ib_spinnerRumpun"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="13dp"
                            android:layout_marginRight="13dp"
                            android:text="*"
                            android:textColor="#f00" />

                        <ProgressBar
                            android:id="@+id/activity_tambah_data_ternak_ib_ProgressbarspinnerRumpun"
                            style="?android:attr/progressBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"
                            android:layout_marginEnd="32dp"
                            android:layout_marginRight="32dp"
                            android:visibility="invisible" />
                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGreySoft" />

                    <FrameLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintTextAppearance="@style/TextHint"
                                android:theme="@style/TextInputLayoutAppearance"
                                app:startIconDrawable="@drawable/ic_person"
                                app:startIconTint="@color/textPrimary">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/activity_tambah_data_ternak_ib_EditTextIDPeternak"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/bg_edittext_tint"
                                    android:hint="@string/id_peternak"
                                    android:inputType="text|textCapCharacters" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="13dp"
                            android:layout_marginRight="13dp"
                            android:text="*"
                            android:textColor="#f00" />
                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGreySoft" />

                    <FrameLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintTextAppearance="@style/TextHint"
                                android:theme="@style/TextInputLayoutAppearance"
                                app:startIconDrawable="@drawable/ic_person"
                                app:startIconTint="@color/textPrimary">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/activity_tambah_data_ternak_ib_EditTextNamaPeternak"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:hint="@string/nama_peternak"
                                    android:inputType="text|textCapWords" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="13dp"
                            android:layout_marginRight="13dp"
                            android:text="*"
                            android:textColor="#f00" />
                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGreySoft" />

                    <FrameLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintTextAppearance="@style/TextHint"
                                android:theme="@style/TextInputLayoutAppearance"
                                app:startIconDrawable="@drawable/ic_no_font"
                                app:startIconTint="@color/textPrimary">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/activity_tambah_data_ternak_ib_EditTextNomorStraw"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/bg_edittext_tint"
                                    android:hint="@string/nomor_straw"
                                    android:inputType="text|textCapCharacters" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="13dp"
                            android:layout_marginRight="13dp"
                            android:text="*"
                            android:textColor="#f00" />
                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGreySoft" />

                    <FrameLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintTextAppearance="@style/TextHint"
                                android:theme="@style/TextInputLayoutAppearance"
                                app:startIconDrawable="@drawable/ic_event_available"
                                app:startIconTint="@color/textPrimary">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/activity_tambah_data_ternak_ib_EditTextTanggalIb"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/bg_edittext_tint"
                                    android:clickable="true"
                                    android:focusable="false"
                                    android:hint="@string/tanggal_ib"
                                    android:inputType="text" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="13dp"
                            android:layout_marginRight="13dp"
                            android:text="*"
                            android:textColor="#f00" />
                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGreySoft" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:scaleType="centerInside"
                                android:layout_margin="12dp"
                                app:tint="@color/textPrimary"
                                app:srcCompat="@drawable/ic_menu_grey" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/TextHint"
                                    android:text="Provinsi" />

                                <androidx.appcompat.widget.AppCompatSpinner
                                    android:id="@+id/activity_tambah_data_ternak_ib_SpinnerKondisi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="13dp"
                            android:layout_marginRight="13dp"
                            android:text="*"
                            android:textColor="#f00" />

                        <ProgressBar
                            android:id="@+id/activity_tambah_data_ternak_ib_ProgressbarspinnerKondisi"
                            style="?android:attr/progressBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"
                            android:layout_marginEnd="32dp"
                            android:layout_marginRight="32dp"
                            android:visibility="invisible" />
                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGreySoft" />

                    <FrameLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintTextAppearance="@style/TextHint"
                                android:theme="@style/TextInputLayoutAppearance"
                                app:startIconDrawable="@drawable/ic_info_grey"
                                app:startIconTint="@color/textPrimary">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/activity_tambah_data_ternak_ib_EditTextKeterangan"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:hint="@string/keterangan" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </FrameLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/activity_tambah_data_ternak_ib_ButtonSimpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/selector_stroke_white_bg"
                android:text="@string/simpan" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
